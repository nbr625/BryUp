<% @tasks.each do |task|%>
  <div class="index_row clearfix">
    <h2 class="todo_list_wrapper">
      <%= render task.name %>
      <div id="form">
        <div class="row clearfix">
          <% if quest.completed? %>
            <div class="complete">
              <%= link_to complete_quest_log_quest_path(@quest_log, quest.id), method: :patch do %>
                <i style="opacity: 0.4;" class="fa fa-check"></i>
              <% end %>
            </div>
            <div class="todo_item">
              <p style="opacity: 0.4;"><strike><%= quest.content %></strike></p>
            </div>
            <div class="trash">
              <%= link_to quest_log_quest_path(@quest_log, quest.id), method: :delete, data: {confirm: "Are you sure you want to abandon the quest?"} do %>
                <i class="fa fa-trash"></i>
              <% end %>
            </div>

          <% else %>

            <div class="complete">
              <%= link_to complete_quest_log_quest_path(@quest_log, quest.id), method: :patch do %>
                <i class="fa fa-check"></i>
              <% end %>
            </div>
            <div class="todo_item">
              <p><%= quest.content %></p>
            </div>
            <div class="trash">
              <%= link_to quest_log_quest_path(@quest_log, quest.id), method: :delete, data: {confirm: "Are you sure you want to abandon the quest?"} do %>
                <i class="fa fa-trash"></i>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </h2>
  </div>
<% end %>
<div class="links">
  <%= link_to 'New Task', new_task_path %>
</div>
